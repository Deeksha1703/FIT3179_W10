{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/Deeksha1703/FIT3179_W10/main/country_data.json"
  },
  "config": {
    "axis": {
      "labelFont": "sans-serif",
      "titleFont": "sans-serif",
      "labelFontSize": 18,
      "titleFontSize": 16,
      "labelLimit": 0
    },
    "legend": {
      "labelFont": "sans-serif",
      "titleFont": "sans-serif",
      "labelFontSize": 16,
      "titleFontSize": 15,
      "labelLimit": 0
    },
    "header": {
      "labelFont": "sans-serif",
      "titleFont": "sans-serif",
      "labelFontSize": 20,
      "titleFontSize": 15
    },
    "title": {
      "font": "sans-serif",
      "subtitleFont": "sans-serif",
      "fontSize": 20
    }
  },
  "params": [
    {
      "name": "Regional_Selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Western Europe",
          "North America",
          "Australia and New Zealand",
          "Middle East and North Africa",
          "Latin America and Caribbean",
          "Central and Eastern Europe",
          "East Asia",
          "Southeast Asia",
          "Commonwealth of Independent States",
          "Sub-Saharan Africa",
          "South Asia"
        ],
        "labels": [
          "Show All",
          "Western Europe",
          "North America",
          "Australia and New Zealand",
          "Middle East and North Africa",
          "Latin America and Caribbean",
          "Central and Eastern Europe",
          "East Asia",
          "Southeast Asia",
          "Commonwealth of Independent States",
          "Sub-Saharan Africa",
          "South Asia"
        ],
        "name": "Region: "
      }
    }
  ],
  "transform": [
    {"filter": "Regional_Selection == null || datum.Regional_Indicator == Regional_Selection"},
    {"filter": "datum.Year == 2021"}
  ],
  "encoding": {
    "x": {
      "field": "Ladder_Score",
      "type": "quantitative",
      "title": "Happiness Index",
      "axis": {"tickCount": 10}
    },
    "y": {
      "field": "Healthy_Life_Expectancy",
      "type": "quantitative",
      "title": "Life Expectancy",
      "axis": {"tickCount": 7}
    }
  },
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["Regional_Indicator"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "population",
          "type": "quantitative",
          "title": "Population",
          "scale": {
            "type": "sqrt",
            "domain": [0, 1000000000],
            "range": [100, 5000]
          }
        },
        "color": {
          "field": "Regional_Indicator",
          "type": "nominal",
          "scale": {
            "domain": [
              "Western Europe",
              "North America",
              "Australia and New Zealand",
              "Middle East and North Africa",
              "Latin America and Caribbean",
              "Central and Eastern Europe",
              "East Asia",
              "Southeast Asia",
              "Commonwealth of Independent States",
              "Sub-Saharan Africa",
              "South Asia"
            ],
            "range": [
              "#1f77b4",
              "#ff7f0e",
              "#2ca02c",
              "#d62728",
              "#9467bd",
              "#8c564b",
              "#e377c2",
              "#7f7f7f",
              "#bcbd22",
              "#17becf",
              "#9edae5"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "continent_highlight", "value": 0.6},
          "value": 0.2
        },
        "tooltip": [
          {"field": "Country_Name", "type": "nominal", "title": "Country Name"},
          {"field": "Regional_Indicator", "type": "nominal", "title": "Regional Indicator"},
          {"field": "Ladder_Score", "type": "quantitative", "format": ",", "title": "Happiness Index"},
          {"field": "population", "type": "quantitative", "title": "Population", "format": ",.0f"},
          {"field": "Corruption", "type": "quantitative", "format": ","}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 20,
        "fontStyle": "italic",
        "fontWeight":"bold"
      },
      "encoding": {
        "text": {"field": "Country_Name", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country_Name'] == 'Finland' || datum['Country_Name'] == 'Afghanistan'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ]
}
